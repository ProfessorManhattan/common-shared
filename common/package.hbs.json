{
  "author": "{{author.name}} <{{author.email}}> ({{link.home}})",
  "blueprint": {
    "description": "An NPM package that is part of the Megabyte Labs eco-system",
    "name": "Name of Package",
    "overview": "This text shows up at the top of the README.md.",
    "repository": {
      "github": "https://github.com/{{profile.github}}/{{repository.prefix.github}}{{slug}}",
      "gitlab": "{{repository.gitlabBaseUrl}}/{{group}}/{{subgroup}}/{{slug}}"
    },
    "slug": "my-project",
    "title": "README Long Title"
  },
  "bugs": {
    "email": "{{email.help}}",
    "url": "{{repository.gitlab}}{{repository.location.issues.gitlab}}"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "description": "{{description}}",
  "devDependencies": {
    "@budibase/handlebars-helpers": "^0.11.7",
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.0",
    "@megabytelabs/jest-preset": "^1.0.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "{{profile_link.opencollective}}/{{profile.opencollective}}"
    },
    {
      "type": "patreon",
      "url": "{{profile_link.patreon}}/{{profile.patreon}}"
    }
  ],
  "homepage": "{{link.home}}",
  "keywords": ["megabytelabs", "professormanhattan", "npm", "package"],
  "license": "{{license}}",
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": ["task fix:prettier --"],
    "**/*.(jpg|png)": ["task image:compress --"],
    "**/*.(js|jsx|ts|tsx)": ["task fix:js --", "task lint:js --"],
    "**/*.json": ["task fix:json --"],
    "**/*.sh": ["task fix:shell --", "task lint:shell --"],
    "**/*.toml": ["task lint:toml --"],
    "**/*.xml": ["task fix:xml --", "task lint:xml --"],
    "**/*.yml": ["task fix:yaml --", "task lint:yaml --"],
    "logo.png": ["task image:resize -- 200 200", "task image:compress --"]
  },
  "name": "{{#if customPackageName}}{{customPackageName}}{{else}}@{{profile.npmjs_organization}}/{{repository.prefix.github}}{{slug}}{{/if}}",
  "prettier": "@megabytelabs/prettier-config",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+{{repository.github}}.git"
  },
  "scripts": {
    "help": "task --list",
    "prepare": "task common:husky",
    "start": "bash .config/start.sh"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  },
  "type": "module",
  "version": "0.0.1"
}
